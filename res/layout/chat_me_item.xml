<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#cccccc"
        android:paddingBottom="2dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:id="@+id/tv_time"
        android:paddingTop="2dp"
        android:text="2015-12-12 12:12:12"
        android:textColor="#ffffff"
        android:textSize="12sp" />
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:id="@+id/rl_from"
        >

    <com.ylf.view.CircleImageView
        android:layout_width="49dp"
        android:id="@+id/iv_from_logo"
        android:layout_height="49dp"
        android:scaleType="fitXY"
        android:src="@drawable/girl" >
    </com.ylf.view.CircleImageView>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_from_logo"
        android:text="大头"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        />
    </RelativeLayout>
    <RelativeLayout 
        android:layout_toLeftOf="@+id/rl_from"
        android:layout_alignTop="@+id/rl_from"
        android:layout_width="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:id="@+id/tv_me_msg"
            android:background="@drawable/chatto_bg_normal"
            android:layout_height="wrap_content"
            android:gravity="center"
            />
    </RelativeLayout>

</RelativeLayout>